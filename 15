var text = "textContent" in document.body ? "textContent" : "innerText";
let textH1 = document.getElementsByTagName("h1")[0][text];
console.log(textH1)

//UL
text = "textContent" in document.body ? "textContent" : "innerText";
textH1 = document.getElementsByTagName("ul")[0][text];
console.log(textH1)

//LI
text = "textContent" in document.body ? "textContent" : "innerText";
textH1 = document.getElementsByTagName("li")[0][text];
console.log(textH1)

